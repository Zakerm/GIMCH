<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F6"
    tools:context=".LoginByPhoneNumber">

    <Button
        android:id="@+id/loginButton"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#FF6F61"
        android:fontFamily="@font/jura_medium"
        android:shadowColor="#000000"
        android:text="Войти"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:typeface="normal"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#554949"
        app:strokeColor="#FFBBB7"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:fontFamily="@font/jura_medium"
        android:hint="Введите пароль"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jura_bold"
        android:text="Вход по "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="394dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/jura_bold"
        android:text="номеру телефона"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/loginPhone"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:fontFamily="@font/jura_medium"
        android:hint="+7"
        android:inputType="phone"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>