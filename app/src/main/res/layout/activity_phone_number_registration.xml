<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F6"
    tools:context=".PhoneNumberRegistrationActivity">

    <EditText
        android:id="@+id/editTextPhoneCode"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:fontFamily="@font/jura_medium"
        android:hint="Введите код"
        android:inputType="text"
        android:maxLength="15"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonPhoneNumberRegistrationRight"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:backgroundTint="#FFFFFF"
        android:rotationY="-180"
        android:scaleType="centerInside"
        android:tint="#6D6767"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svgrepo_iconcarrier" />

    <ImageButton
        android:id="@+id/buttonPhoneNumberRegistrationLeft"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="500dp"
        android:background="@null"
        android:backgroundTint="#FFFFFF"
        android:focusable="auto"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svgrepo_iconcarrier" />

    <Button
        android:id="@+id/btnPhoneNumber"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#FF6F61"
        android:fontFamily="@font/jura_medium"
        android:shadowColor="#000000"
        android:text="Получить код"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:typeface="normal"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#554949"
        app:strokeColor="#FFBBB7"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:fontFamily="@font/jura_medium"
        android:hint="+7"
        android:inputType="phone"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPhoneNumberError"
        android:layout_width="359dp"
        android:layout_height="23dp"
        android:layout_marginTop="468dp"
        android:paddingTop="4dp"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="325dp"
        android:layout_height="66dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="@font/jura"
        android:lineSpacingExtra="0dp"
        android:text="Мы отправим код подтверждения на твой номер"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/jura_bold"
        android:text="Ты почти у цели!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button18"
        android:layout_width="361dp"
        android:layout_height="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:backgroundTint="#FFB3BA"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="."
        android:textSize="1sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFB3BA" />

</androidx.constraintlayout.widget.ConstraintLayout>